<div class="slider movie-items">
    <div class="container">
        <div class="row">
            <div class="slick-multiItemSlider">
                @foreach (var item in Model.OrderByDescending(x=>x.Id).Take(8))     
                {
                    <div class="movie-item">
                        <div class="mv-img">
                            <a href="/Home/GetIndex?Id=@item.Id"><img src="@item.MovieImage" alt="" width="285" height="437" style="display:block;width:285px;height:437px;"></a>
                        </div>
                        <div class="title-in">
                            <div class="cate">
                                <span class="blue"><a href="#">@item.Category.CategoryName</a></span>
                            </div>
                            <h6><a href="/Home/GetIndex?Id=@item.Id">@item.MovieTitle</a></h6>
                        </div>
                    </div>
                }

            </div>
        </div>



    </div>

</div>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>İmage</th>
            <th>Year</th>
            <th>Time</th>
            <th>Director</th>
            <th>Actor</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var xyz in Model)
        {


            <tr style="background-color:#">
                <td><b style="text-align:center;font-size:18px;">@xyz.MovieTitle</b></td>
                <td><a href="/Home/GetIndex/@xyz.Id"><img src="@xyz.MovieImage" alt="@xyz.MovieTitle" width="100" height="80" /></a></td>
                <td><b style="text-align:center;font-size:18px;">@xyz.MovieYear</b></td>
                <td><b style="text-align:center;font-size:18px;">@xyz.MovieTime</b></td>
                <td>
                    @foreach (var xyx in xyz.Directors)
                    {
                    <a href="/Home/GetDirector/@xyx.Id"><b style="text-align:center;font-size:18px;">@xyx.Name (@xyx.Movies.Count())</b></a> 

                    }
                </td>
                <td>
                    @foreach (var xyv in xyz.Actors)
                    {
                    <a href="/Home/GetActor/@xyv.Id"><b style="text-align:center;font-size:18px;">@xyv.Name (@xyv.Movies.Count())</b></a>  

                    }
                </td>
                <td><a href="/Home/GetIndex/@xyz.Id" class="item item-2 redbtn fancybox-media hvr-grow">İzle</a></td>
            </tr>

        }
    </tbody>
</table>

